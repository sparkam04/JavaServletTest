<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>XmlServlet</servlet-name>
        <servlet-class>com.sparkam.WebProjectTest.XmlServlet</servlet-class>
        <init-param>
            <param-name>defaultParamName</param-name>
            <param-value>defaultParamValue</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>XmlServlet</servlet-name>
        <url-pattern>/xmlServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JspServlet</servlet-name>
        <jsp-file>/index.jsp</jsp-file>
        <init-param>
            <param-name>defaultParamNameJSP</param-name>
            <param-value>defaultParamValueJSP</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>JspServlet</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>form1.html</welcome-file>
    </welcome-file-list>

</web-app>